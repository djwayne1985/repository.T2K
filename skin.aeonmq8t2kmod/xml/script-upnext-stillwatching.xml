<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3012</defaultcontrol>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <controls>
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
			<texture>black.png</texture>
			<colordiffuse>a4303030</colordiffuse>
			<include>animation_fade</include>
		</control>
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="400" />
                <effect type="slide" start="0,-181" end="0,0" time="400" />
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="fade" start="100" end="0" time="400" />
                <effect type="slide" start="0,0" end="0,-181" time="400" />
            </animation>
            <control type="group">
                <control type="image">
					<left>0</left>
					<top>0</top>
					<width>1920</width>
					<height>480</height>
					<texture flipy="true" diffuse="shadow_mask.png">$VAR[texture_base]</texture>
					<colordiffuse>$INFO[skin.string(colortexture)]</colordiffuse>
					<animation effect="fade" end="85" condition="true">Conditional</animation>
				</control>
                <!-- MINIATURAS -->
                <control type="group">
                    <top>20</top>
                    <left>20</left>
                    <control type="textbox">
                        <top>10</top>
                        <left>10</left>
                        <width>230</width>
                        <height>121</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <label>$INFO[Window.Property(tvshowtitle)]</label>
						<font>font_list</font>
						<scroll>true</scroll>
						<scrollout>false</scrollout>
						<shadowcolor>grey</shadowcolor>	
                        <visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
                    </control>
					<control type="image">
						<width>284</width>
						<height>160</height>
						<texture>$INFO[Window.Property(landscape)]</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="image">
						<width>284</width>
						<height>160</height>
						<texture>$INFO[Window.Property(fanart)]</texture>
						<aspectratio>scale</aspectratio>
						<visible>String.IsEmpty(Window.Property(landscape))</visible>
					</control>
					<control type="image">
						<width>284</width>
						<height>160</height>
						<texture>$INFO[Window.Property(thumb)]</texture>
						<aspectratio>scale</aspectratio>
						<visible>String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
					</control>
                    <control type="progress" id="3014">
                        <left>0</left>
						<top>-15</top>
						<width>1890</width>
						<height>6</height>
                    </control>
                </control>
				<control type="image">
					<left>315</left>
					<top>20</top>
					<width>30</width>
					<height>35</height>
					<texture>arrow_settings.png</texture>
					<colordiffuse>$INFO[skin.string(colortext)]</colordiffuse>
					<aspectratio align="center" aligny="bottom">keep</aspectratio>
				</control>
                <!-- TEMPORIZADOR/TITULO/ANO -->
                <control type="group">
                    <left>315</left>
					<top>20</top>
                    <!-- temporizador -->
                    <control type="label">
						<left>40</left>
                        <width>auto</width>
                        <height>35</height>
                        <aligny>center</aligny>
                        <label>$ADDON[service.upnext 30024]</label>
						<font>font_plot</font>
						<shadowcolor>grey</shadowcolor>	
                    </control>
                    <control type="grouplist">
                        <top>40</top>
						<itemgap>5</itemgap>
						<orientation>vertical</orientation>
						<!-- titulo -->
						<control type="label">
							<width>1200</width>
							<height>35</height>
							<aligny>center</aligny>
							<label>$INFO[Window.Property(tvshowtitle),, - ]$INFO[Window.Property(season),S,]$INFO[Window.Property(episode),E, - ]$INFO[Window.Property(title)]</label>
							<font>font_list</font>
							<scroll>true</scroll>
							<scrollout>false</scrollout>
							<shadowcolor>grey</shadowcolor>							
							<visible>!String.IsEmpty(Window.Property(title))</visible>
						</control>
						<!-- ano -->
						<control type="label">
							<width>400</width>
							<height>30</height>
							<aligny>center</aligny>
							<label>$INFO[Window.Property(year),,   ]</label>
							<font>font_subtitle</font>
							<scroll>true</scroll>
							<scrollout>false</scrollout>
							<shadowcolor>grey</shadowcolor>							
							<visible>!String.IsEmpty(Window.Property(year))</visible>
						</control>						
					</control>
					<!-- estrelas -->
					<control type="image">
						<left>1280</left>
						<top>44</top>
						<width>300</width>
						<height>30</height>
						<texture fallback="$VAR[styleratingstars,,0.png]">$VAR[styleratingstars]$INFO[Window.Property(rating),,.png]</texture>
						<aspectratio align="left" aligny="center">keep</aspectratio>
						<colordiffuse>$VAR[colorratingstars_upnext]</colordiffuse>
					</control>
					<!-- nota -->
					<control type="label">
						<left>1200</left>
						<top>80</top>
						<width>400</width>
						<height>30</height>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[Window.Property(rating), ,   ]</label>
						<font>font_subtitle</font>
						<visible>!String.IsEmpty(Window.Property(rating))</visible>					
					</control>
                    <!-- botoes -->
                    <control type="grouplist">
                        <orientation>horizontal</orientation>
						<height>44</height>
						<top>116</top>
						<itemgap>10</itemgap>
						<control type="button" id="3012">							
							<width min="80">auto</width>
							<height>44</height>
							<align>center</align>
							<label>$ADDON[service.upnext 30010] $ADDON[service.upnext 30036] [COLOR=$INFO[skin.string(colorheader)]]$INFO[Player.TimeRemaining(ss),,][/COLOR] $ADDON[service.upnext 30035]</label>			
							<font>font_plot</font>
							<textcolor>$INFO[skin.string(colortext)]</textcolor>
							<focusedcolor>$INFO[skin.string(colortextfocused)]</focusedcolor>				
							<textoffsetx>20</textoffsetx>
							<textwidth min="80">auto</textwidth>
							<texturefocus colordiffuse="$INFO[skin.string(colortext)]">grey.png</texturefocus>
							<texturenofocus></texturenofocus>
						</control>
						<control type="button" id="3013">							
							<width min="80">auto</width>
							<height>44</height>
							<align>center</align>
							<label>$ADDON[service.upnext 30034]</label>							
							<font>font_plot</font>
							<textcolor>$INFO[skin.string(colortext)]</textcolor>
							<focusedcolor>$INFO[skin.string(colortextfocused)]</focusedcolor>				
							<textoffsetx>20</textoffsetx>
							<textwidth min="80">auto</textwidth>
							<texturefocus colordiffuse="$INFO[skin.string(colortext)]">grey.png</texturefocus>
							<texturenofocus></texturenofocus>
						</control>                        
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>